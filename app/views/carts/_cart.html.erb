<% if cart.cart_items.empty? %>
  <h3 style="color: white !important; text-align: center !important;">Your shopping cart is empty!</h2>
<% else %>
  <h2> Your Cart</h2>
  <section>
    <table>
      <%= render(@cart.cart_items) %>
      <tr>
        <td />
        <td />
        <td>Cart Total: <%= number_to_currency(cart.total_price) %></td>
      </tr>
    </table>
  </section>
  <%= button_to 'Checkout', new_order_path, method: :get %>
  <%= button_to 'Empty Cart', cart, method: :delete, data: { confirm: 'Are you sure?'}, remote: true %>
<% end %>


  
