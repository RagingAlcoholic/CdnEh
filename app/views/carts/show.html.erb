<% if notice %>
  <p id="notice"><%= notice %></td>
<% end %>

<h2> Your Shopping Cart</h2>
<table>
  <% @cart.cart_items.each do |item| %>
  <tr>
    <td><%= item.product.name %></td>
    <td>Quantity: <%= item.quantity %> @ <%= number_to_currency(item.product.price) %> ea.</td>
    <td>Total: <%= number_to_currency(item.total_price) %></td>
  </tr>
  <% end %>
  <tr>
    <td />
    <td />
    <td>Cart Total: <%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>

<%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: 'Are you sure?'} %>
